<%= link_to "Sign Out", logout_path %>
<% provide(:button_text, "Create New Link") %>
<div class="new-link">
  <h2>Create New Link</h2>
  <br><br>
  <%= render partial: "form" %>
</div>
<br>
<div class="links">
  <% @links.each do |link| %>
    <% if link.valid? %>
      <div class="<%= link.read ? 'read-link': 'unread-link'%>">
        Title: <%= link.title %>
        URL: <%= link.url %>
        Read: <%= link.read %>
        <% if link.read %>
          <%= link_to "Mark as Unread", link_path(link.id, link: {read: false}), method: :put %>
        <% else %>
          <%= link_to "Mark as Read", link_path(link.id, link: {read: true}), method: :put %>
        <% end %>
        <%= link_to "Edit", edit_link_path(link.id) %>
      </div>
    <% end %>
  <% end %>
</div>
